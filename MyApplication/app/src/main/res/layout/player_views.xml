<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="#b4aca0">

    
    <ImageView
        android:id="@+id/position_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="12dp"/>
    <TextView
        android:id="@+id/list_item_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST THIS"
        android:layout_toRightOf="@id/position_image"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/list_item_player_postion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST POSTION"
        android:layout_toRightOf="@id/position_image"
        android:layout_below="@id/list_item_player_name"
        android:layout_marginTop="8dp"/>
</RelativeLayout>